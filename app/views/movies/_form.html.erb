<%= form_for (m) do |f| %>

  <% if m.errors.any? %>
    <div class="error_explanation">
      <p> <% m.errors.full_messages.each do |msg| %> 
        <%= msg %>,
      <% end -%>

      please try again!</p> 
    </div>
  <% end -%>

<%= f.label :title %>
<%= f.text_field :title %>  

<%= f.label :director %>
<%= f.text_field :director %> <br>

<%= f.label :release_year %>
<%= f.number_field :release_year %> <br>

<%= f.label :duration %>
<%= f.number_field :duration %> <br>

<%= f.submit %>

<% end -%>